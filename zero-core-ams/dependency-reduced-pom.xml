<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>zero-ecosystem</artifactId>
        <groupId>io.zerows</groupId>
        <version>1.0.0</version>
        <relativePath>../pom.xml/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>zero-core-ams</artifactId>
    <packaging>bundle</packaging>
    <name>Zero.Core.AMS.Specification</name>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <_fixupmessages>"Classes found in the wrong directory";restrict:=error;is:=ignore
                        </_fixupmessages>
                        <Export-Package>io.horizon.*,
                            io.modello.*,
                            io.zerows.jackson.*,
                            io.macrocosm.*,


                            io.vertx.*,
                            io.netty.*,
                            com.fasterxml.*
                        </Export-Package>
                        <Import-Package>*;resolution:=optional,</Import-Package>
                        <DynamicImport-Package>io.netty.channel.epoll.*,
                            io.netty.handler.codec.http.*
                        </DynamicImport-Package>
                        <Export-Service>io.zerows.core.spi.boot.HEquip,
                            io.zerows.core.spi.cloud.HED,
                            io.zerows.core.spi.modeler.AtomNs,
                            io.zerows.core.spi.modeler.Identifier,
                            io.zerows.core.spi.modeler.Indent,
                            io.zerows.core.spi.modeler.MetaOn,
                            io.zerows.core.spi.typed.VsExtension,
                            io.zerows.core.spi.BootIo,
                            io.zerows.core.spi.HorizonIo
                        </Export-Service>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <version>${maven.plugin.shade}</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <minimizeJar>true</minimizeJar>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.plugin.compiler}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <type>jar</type>
                            <includeTypes>jar</includeTypes>
                            <outputDirectory>target/lib</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
