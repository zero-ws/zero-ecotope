<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>zero-ecotope</artifactId>
        <groupId>io.zerows</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>zero-ecosystem</artifactId>
    <name>Zero Ecosystem ${zero.version}</name>
    <packaging>pom</packaging>
    <dependencyManagement>
        <dependencies>

            <!-- Apache -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-apache</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- AspectJ -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-aspectj</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Camunda -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-camunda</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Cluster -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-cluster</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Database -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-database</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Doc -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-doc</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Eclipse -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-eclipse</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- ELK -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-elk</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- gRpc -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-google</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- gRpc -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-grpc</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Jackson -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-jackson</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- JSR -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-jsr</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- JVM Reflection -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-jvmr</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Netty -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-netty</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Quiz -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-quiz</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Reactive -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-reactive</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Secure -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-secure</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Zero Framework -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-version</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Vendor -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-vendor</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <!-- Vertx -->
            <dependency>
                <groupId>io.zerows</groupId>
                <artifactId>zero-eco-vertx</artifactId>
                <version>${zero.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>

            <!--
            Camunda 默认带的库相关信息
            低优先级模式：Maven库中，放在后边的依赖优先级更低，前边的依赖优先级更高
             -->
            <dependency>
                <groupId>org.camunda.bpm</groupId>
                <artifactId>camunda-bom</artifactId>
                <version>${camunda.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>org.camunda.bpm.dmn</groupId>
                <artifactId>camunda-engine-dmn-bom</artifactId>
                <version>${camunda.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <plugins>
            <!-- Java Doc -->
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <!-- 输出设置：路径/风格 -->
                    <outputDirectory>${basedir}/document</outputDirectory>
                    <reportOutputDirectory>${basedir}</reportOutputDirectory>
                    <!-- 连接配置 -->
                    <doclint>none,-missing</doclint>
                    <detectJavaApiLink>true</detectJavaApiLink>
                </configuration>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <release>17</release>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- https://mvnrepository.com/artifact/org.codehaus.mojo/build-helper-maven-plugin -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <!--
                                最底层
                                - environment：常量、枚举、运行时
                                - entry：入口专用目录
                                - error：异常定义（非模块）
                                - extension：第三方扩展
                                -->
                                <source>src/main/entry</source>
                                <source>src/main/environment</source>
                                <source>src/main/error</source>
                                <source>src/main/extension</source>

                                <!--
                                语言级
                                - java：Java语言主目录
                                - jib：SPI、自定义组件
                                - plugin: 插件
                                -->
                                <source>src/main/java</source>
                                <source>src/main/jib</source>
                                <source>src/main/plugin</source>

                                <!--
                                核心级
                                - macro: 云原生
                                - modeler：建模
                                - modulat：模块化 / 模块内的自定义组件和异常位于此处，而不会在 error / jib 下
                                - migrate: 升级专用
                                - mature: 成熟度（标准化业务包）
                                -->
                                <source>src/main/macro</source>
                                <source>src/main/modeler</source>
                                <source>src/main/modulat</source>
                                <source>src/main/migrate</source>
                                <source>src/main/mature</source>

                                <!--
                                - qas：标准化专用目录，只提供 specification 部分的接口设计
                                  全称：Qualifier Agreement Specification
                                  此目录包含了所有 specification 部分的接口设计
                                  - 项目：Agree Metadata Specification，达成一致的元数据规范
                                  - 目录：Qualifier Agreement Specification（interface定义，不包含实现）
                                -->
                                <source>src/main/qas</source>

                                <!--
                                容器级
                                - mock: 测试专用
                                - web: 标准容器
                                - boot: 启动器专用目录
                                -->
                                <source>src/main/test</source>
                                <source>src/main/web</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>logs</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>archive</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>target</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>file-exported</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>file-uploads</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>document</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>**/*Tc.java</include>
                        <include>**/*Te.java</include>
                    </includes>
                    <excludes>
                        <exclude>**/Base*.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>