    <artifactId>zero-plugins-extension</artifactId>
    <packaging>pom</packaging>
    <name>(POM) üìöÔ∏è - Zero::Extension</name>
    <modules>
        <!-- Êâ©Â±ïÊ®°ÂùóÈ™®Êû∂ -->
        <module>zero-extension-skeleton</module>                            <!-- Skeleton -->
        <module>zero-extension-crud</module>                                <!-- CRUD ÂºïÊìé -->
